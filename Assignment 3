#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    // set up the constants for payments and royaltys 
    const double OPTION1_DELIVERY = 5000.0;
    const double OPTION1_PUBLICATION = 20000.0;
    const double OPTION2_RATE = 0.125;
    const double OPTION3_RATE1 = 0.10;
    const double OPTION3_RATE2 = 0.14;
    const int OPTION3_BREAKPOINT = 4000;

    double netPrice;
    int copiesSold;
    // get input from the user 
    cout << "Enter the net price of each copy: ";
    cin >> netPrice;
    cout << "Enter the estimated number of copies sold: ";
    cin >> copiesSold;

    // calculate the rotalitys for option 1 - these are fixed payments
    double royalty1 = OPTION1_DELIVERY + OPTION1_PUBLICATION;

    // calculate royalties for option 2 -- this should be 12.5% 
    double royalty2 = OPTION2_RATE * netPrice * copiesSold;

    // calculate royalties for option 3 - split 4000 copies
    double royalty3;
    if (copiesSold <= OPTION3_BREAKPOINT) {
        royalty3 = OPTION3_RATE1 * netPrice * copiesSold;
    } else {
        royalty3 = (OPTION3_RATE1 * netPrice * OPTION3_BREAKPOINT) +
                   (OPTION3_RATE2 * netPrice * (copiesSold - OPTION3_BREAKPOINT));
    }
    // show royalties for each option
    cout << fixed << setprecision(2);
    cout << "\nOption 1 royalties: $" << royalty1 << endl;
    cout << "Option 2 royalties: $" << royalty2 << endl;
    cout << "Option 3 royalties: $" << royalty3 << endl;


    // chose the best option and display it below
    if (royalty1 >= royalty2 && royalty1 >= royalty3) {
        cout << "\nBest option is Option 1 with $" << royalty1 << endl;
    } else if (royalty2 >= royalty1 && royalty2 >= royalty3) {
        cout << "\nBest option is Option 2 with $" << royalty2 << endl;
    } else {
        cout << "\nBest option is Option 3 with $" << royalty3 << endl;
    }

    return 0;
}
