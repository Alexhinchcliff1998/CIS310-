#include <iostream>
#include <string>
#include <iomanip>

using namespace std;

int main() {
    const int CANDIDATES = 5;
    string names[CANDIDATES];
    int votes[CANDIDATES];
    int totalVotes = 0;
    int maxVotes = 0;
    string winner;

    // Input candidate names and votes
    for (int i = 0; i < CANDIDATES; i++) {
        cout << "Enter the last name of candidate " << i + 1 << ": ";
        cin >> names[i];
        cout << "Enter the number of votes received by " << names[i] << ": ";
        cin >> votes[i];
        totalVotes += votes[i];
    }

    // Output header
    cout << "\nCandidate\tVotes Received\t% of Total Votes\n";

    // Output each candidate's results and find winner
    for (int i = 0; i < CANDIDATES; i++) {
        double percent = (static_cast<double>(votes[i]) / totalVotes) * 100;
        cout << names[i] << "\t\t" << votes[i] << "\t\t" 
             << fixed << setprecision(2) << percent << endl;

        if (votes[i] > maxVotes) {
            maxVotes = votes[i];
            winner = names[i];
        }
    }

    cout << "\nThe Winner of the Election is " << winner << "." << endl;

    return 0;
}
